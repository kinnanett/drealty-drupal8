{#
/**
 * @file
 * Default theme implementation to list listing types available for adding content.
 *
 * This list is displayed on the Add listing admin page.
 *
 * Available variables:
 * - types: A list of listing types, each with the following properties:
 *   - add_link: Link to create a listing of this type.
 *   - description: Description of this type of listing.
 *
 * @see template_preprocess_drealty_listing_add_list()
 *
 * @ingroup themeable
 */
#}
{% if types is not empty %}
  <dl class="listing-type-list">
    {% for type in types %}
      <dt>{{ type.add_link }}</dt>
      <dd>{{ type.description }}</dd>
    {% endfor %}
  </dl>
{% else %}
  <p>
    {% set create_content = path('drealty.listing_type_add') %}
    {% trans %}
      You have not created any listing types yet. Go to the <a href="{{ create_content }}">listing type creation page</a> to add a new listing type.
    {% endtrans %}
  </p>
{% endif %}
